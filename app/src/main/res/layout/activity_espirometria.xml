        app:layout_constraintBottom_toBottomOf="@+id/pbFlujo"
        app:layout_constraintEnd_toEndOf="@+id/pbFlujo"
        app:layout_constraintTop_toTopOf="@+id/pbFlujo"
        app:layout_constraintVertical_bias="0.647" />

    <ProgressBar
        android:id="@+id/pbRR"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="368dp"
        android:layout_height="79dp"
        android:layout_marginBottom="48dp"
        android:indeterminateOnly="false"
        android:padding="20dp"
        android:progress="0"
        android:progressDrawable="@drawable/custom_horizontal_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvCDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="00:00"
        android:textColor="@color/red"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.817" />

    <TextView
        android:id="@+id/tvIE"
        android:layout_width="wrap_content"
