        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pbFlujo"
        app:layout_constraintEnd_toEndOf="@+id/pbFlujo"
        app:layout_constraintHorizontal_bias="0.49"
